{{ 'gtkv.css' | asset_url | stylesheet_tag }}

<div class="get-to-know-wrapper">
  <div class="container">
    <div class="get-to-know flex-box justify-between">
      <div class="video-gtk rel">
        <img  id="video-cover" src="{{ '/studioballena_theme/static/imgs/004g 20150529 Puratos 073.jpg' | relative_url }}" alt="Video title" />
        <iframe id="player" width="100%" height="100%" src="https://www.youtube.com/embed/cBVGlBWQzuc" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        <button id="play" class="play-btn">
          PLAY
        </button>
      </div>
      <div class="text-gtk">
      	gtk
