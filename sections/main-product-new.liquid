<script>
  
  function checkAvailability() {
    if($('#product-json').length > 0) {
      var string3 = "";
      $(".selector.selected").each(function(index){
        if(string3 == "") {
          if($(this).hasClass("box-selector") &&  $(this).hasClass("selected")) {
            string3 += $(this).data("val");
          } else {
            string3 += $(this).val();
          }          
        } else {

          if($(this).hasClass("box-selector") &&  $(this).hasClass("selected")) {
            string3 += " / " + $(this).data("val");
          } else {
            string3 += " / " + $(this).val();
          }           
        }
      });
      console.log(string3);
      var x = JSON.parse($('#product-json').html());
      var w = x.find(item => {
        return item.title === string3;
      });

      var variantId = w.id;
      var availability = w.available;
      var quantAvailable = w.inventory_quantity;
      var inventoryPolicy = w.inventory_policy;
      var inventoryManagement = w.inventory_management;
      
      console.log("var id: "+variantId);
      console.log("var availability: "+availability);
      console.log("var quantAvailable: "+quantAvailable);
      console.log("var inventoryPolicy: "+inventoryPolicy);
      console.log("var inventoryManagement: "+inventoryManagement);

      if(inventoryManagement != null) {
        if(availability == true) {
          if($(".qty-number").val() <= quantAvailable) {
            $("#popupaddtocart").attr("disabled",false);
            $("#AddToCart").removeClass("span-disabled");
          }
          else {
            $(" #popupaddtocart").attr("disabled",true);
            $("#AddToCart").addClass("span-disabled");
          }
        }
        else {
          if(inventoryPolicy == "deny") {
            $(" #popupaddtocart").attr("disabled",true);
            $("#AddToCart").addClass("span-disabled");
          }
          else {
            $("#popupaddtocart").attr("disabled",false);
            $("#AddToCart").removeClass("span-disabled");
          }
        }
      }
      else {
        $("#popupaddtocart").attr("disabled",false);
        $("#AddToCart").removeClass("span-disabled");
      }
    }
  }
  checkAvailability();
    
</script>

