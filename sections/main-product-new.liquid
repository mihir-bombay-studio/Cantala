              	{%- for value in option.values -%}
                  {% if option.name == "Gewicht" %}
              		<div class="selector box-selector {% if option.selected_value == value %}selected{% endif %}">{{ value | escape }}</div>
                  {% else %}
                    {% if forloop.first %}
              		<div class="custom-select">
                    <select class="selector drop-selector" name="{{option.name}}" id="selector-{{ forloop.index }}">
                      {% endif %}
                      <option value="{{ value | escape }}" {% if option.selected_value == value %}selected{% endif %}>{{ value | escape }}</option>
                      {% if forloop.last %}
