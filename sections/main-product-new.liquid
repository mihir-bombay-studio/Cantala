  </div>
  
  
  <div class="container product padd-top-m flex-box justify-between top-puzzle-left">
    <div class="product-row-1">
      <div class="slider-for">
        {% for media in product.media %}
        {% case media.media_type %}
        {% when 'image' %}
        <img src="{{ media | img_url: 'x600' }}" alt="{{ media.alt | escape }}" {% unless forloop.first %}loading="lazy"{% endunless %}>
        {% when 'video' %}
        <video playsinline="playsinline" preload="auto" autoplay="autoplay" muted="muted" loop="loop">
          {% for video in media.sources %}{% if video.format == "mp4" %}<source src="{{ video.url }}" type="video/mp4">{% endif %}{% endfor %}
        </video>
        {% else %}
        <img src="{{ media | img_url: 'x600' }}" alt="{{ media.alt | escape }}" {% unless forloop.first %}loading="lazy"{% endunless %}>
        {% endcase %}          
        {% endfor %}
      </div>
      <div class="slider-nav{% for media in product.media %}{% if forloop.length < 8 %} no-transform{% endif %}{% endfor %}">
        {% for media in product.media %}          
        {% case media.media_type %}
        {% when 'image' %}
        <img src="{{ media.preview_image | img_url: '200x' }}" alt="{{ media.alt | escape }}"> 
        {% when 'video' %}
        <div class="video-btn"><img src="{{ media.preview_image | img_url: '200x' }}" alt="{{ media.alt | escape }}"> </div>
        {% else %}
