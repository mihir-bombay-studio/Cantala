{{ 'about-us-rnd.css' | asset_url | stylesheet_tag }}

<style>
  a.btn.medium.btn-dark.module.m-bottom {
    padding-left: 24px;
    padding-right: 24px;
    margin-top: 24px;
    margin-bottom: 24px;
}
</style>
<div class="about-us-rnd-wrapper">
  <div class="container">
    <div class="aur-wrapper flex-box justify-between">
      <div class="aur-left module">
        <div class="aur-main-img">
        	<img class="main-img" src="{{ section.settings.main_img | img_url: '700x' }}" alt = "sub-img">
        </div>
        <div class="aur-sub-heading heading-2">{{ section.settings.sub_heading }}</div>
        <div class="sub-para">{{ section.settings.para_two }}</div>
      </div>
      <div class="aur-right module">
      	<h1 class="auc-title heading-2">{{ section.settings.heading }}</h1>
        <div class="main-para">{{ section.settings.para_one }}</div>
        <div class="aur-sub-img">
        	<img class="sub-img" src="{{ section.settings.sub_img | img_url: '500x' }}" alt = "sub-img">
        </div>
        <div class="third-para">{{ section.settings.para_three }}</div>
        {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="btn medium btn-dark module m-bottom">
        	{{ section.settings.button_text | escape }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "About Us RND",
    "settings": [
		{
			"id": "heading",
        	"type": "text",
        	"label": "Section Heading"
		},
		{
			"id": "sub_heading",
        	"type": "text",
        	"label": "Section Sub Heading"
		},
		{
			"id": "para_one",
        	"type": "text",
        	"label": "Main Paragraph"
		},
		{
			"id": "main_img",
			"type": "image_picker",
			"label": "Main Image"
		},
		{
			"id": "sub_img",
			"type": "image_picker",
			"label": "Sub Image"
		},
		{
			"id": "para_two",
        	"type": "text",
        	"label": "Sub Paragraph"
		},
		{
			"id": "para_three",
        	"type": "text",
        	"label": "Third Paragraph"
		},
		{
			"id": "button_text",
        	"type": "text",
        	"label": "CTA text"
		},
		{
			"id": "button_link",
        	"type": "url",
        	"label": "CTA link"
		}
	],
	"presets": [
    {
      "name": "About Us RND",
		"category":"section"
    }
  ]
  }
{% endschema %}

