{{ 'about-us-composer.css' | asset_url | stylesheet_tag }}

<div class="about-us-composer-wrapper">
  <div class="container">
    <div class="auc-wrapper flex-box justify-between">
      <div class="auc-left">
        <div class="auc-sub-heading">{{}}</div>
      </div>
      <div class="auc-right"></div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "About Us Composer",
    "settings": [
		{
			"id": "heading",
        	"type": "text",
        	"label": "Section Heading"
		},
		{
			"id": "sub_heading",
        	"type": "text",
        	"label": "Section Sub Heading"
		},
		{
			"id": "para_one",
        	"type": "text",
        	"label": "Main Paragraph"
		},
		{
			"id": "main_img",
			"type": "image_picker",
			"label": "Main Image"
		},
		{
			"id": "sub_img",
			"type": "image_picker",
			"label": "Sub Image"
		},
		{
			"id": "para_two",
        	"type": "text",
        	"label": "Sub Paragraph"
		}
	],
	"presets": [
    {
      "name": "About Us Composer",
		"category":"section"
    }
  ]
  }
{% endschema %}

