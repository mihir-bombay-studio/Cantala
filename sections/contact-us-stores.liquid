{{ 'stores.css' | asset_url | stylesheet_tag }}

<div class="stores-wrapper">
  <div class="container">
    <div class="contact-us-stores-wrap flex-box justify-between">
      <h2 class="contact-us-stores-heading heading-2">{{ section.settings.heading }}</h2>
    <div class="stores-content contact-us-stores flex-box">
    	{% for block in section.blocks %}
        {% if block.type == "address" %}
      		<div class="store-info-wrap">
              <div class="store-name medium">{{ block.settings.store_name }}</div>
              <div class="store-address-wrap">
              	<div class="store-address">{{ block.settings.add_ln_1 }}</div>
                <div class="store-address">{{ block.settings.add_ln_2 }}</div>
                <div class="store-address">{{ block.settings.add_ln_3 }}</div>
              </div>
              <br>
              <div class="store-phone">{{ block.settings.phone }}</div>
              <hr class="addr-hr">
              <div class="store-timings">
                <div class="store-days">{{ block.settings.days }}</div>
                <div class="store-timing">{{ block.settings.days_time }}</div>
                <div class="store-days">{{ block.settings.weekend }}</div>
                <div class="store-timing">{{ block.settings.weekend_time }}</div>
              </div>
      		</div>
        {% endif %}
        {% endfor %}
    </div>
  </div>
    </div>
</div>

{% schema %}
  {
    "name": "Contact Us Stores",
    "settings": [
		{
			"id": "heading",
			"type": "text",
			"label": "Section Heading"
		}
	],
	"blocks": [
		{
                "type": "address",
                "name": "Store Address",
                "settings": [

                {
                "id": "store_name",
                "type": "text",
                "label": "Store Name"
                },
                {
                "id": "add_ln_1",
                "type": "text",
                "label": "Address Line 1"
                },
				{
                "id": "add_ln_2",
                "type": "text",
                "label": "Address Line 2"
                },
				{
                "id": "add_ln_3",
                "type": "text",
                "label": "Address Line 3"
                },
				{
                "id": "phone",
                "type": "text",
                "label": "Phone Number"
                },
				{
                "id": "days",
                "type": "text",
                "label": "Week Days"
                },
				{
                "id": "days_time",
                "type": "text",
                "label": "Week Days Timings"
                },
				{
                "id": "weekend",
                "type": "text",
                "label": "Weekend"
                },
				{
                "id": "weekend_time",
                "type": "text",
                "label": "Weekend Timings"
                }
              ]
            }
	],
	"presets": [
    {
      "name": "Contact Us Stores",
		"category":"section"
    }
  ]
  }
{% endschema %}

