{{ 'hero.css' | asset_url | stylesheet_tag }}

<div class="hero-wrapper">
  <div class="container">
  <div class="hero flex-box justify-between align-center">
    <div class="hero-left rel module">
      <h1 class="hero-heading main-title">{{ section.settings.hero_heading }}</h1>
      <div class="hero-desc">{{ section.settings.hero_desc }}</div>
      <div class="hero-btns flex-box">
      	{% for block in section.blocks %}
        {% if block.type == "button" %}
        <a href="{{ block.settings.button_link }}" class="btn medium {% if block.settings.button-color == 'light' %}btn-light{% else %}btn-dark{% endif %}">
        	{{ block.settings.button_text | escape }}
        </a>
        {% endif %}
        {% endfor %}
      </div>
      <div class="trustbox-wrapper2">
        <a href="https://nl-be.trustpilot.com/review/cantata.be" target="_blank" title="cantata trustpilot"><img src="{{ "Trustpilot_label_-_transparent_2x.png" | asset_url }}" alt="trustpilot review cantata"></a>
      </div>
    </div>
    <div class="hero-right rel module">
    	<img class="hero-img" src="{{ section.settings.hero_img | img_url: '1000x' }}" alt="Your symphony of taste" loading="lazy">
    </div>
  </div>
  </div>
</div>

{% schema %}
  {
    "name": "Hero New",
    "settings": [
			{
              "id": "hero_img",
              "type": "image_picker",
              "label": "Select Hero Image"
            },
			{
				"id": "hero_heading",
				"type": "text",
				"label": "Hero Heading"
			},
			{
				"id": "hero_desc",
				"type": "text",
				"label": "Hero Description"
			}
		],
	"blocks": [
			{
                "type": "button",
                "name": "Hero Button",
				"limit": 2,
                "settings": [

                {
                "id": "button_text",
                "type": "text",
                "label": "Button Text"

                },
                {
                "id": "button_link",
                "type": "url",
                "label": "Button Link"
                },
				{
                  "type": "select",
                  "id": "button-color",
                  "options": [
                    {
                      "value": "light",
                      "label": "Light"
                    },
                    {
                      "value": "dark",
                      "label": "Dark"
                    }
                  ],
                  "default": "dark",
                  "label": "Dark"
                }
              ]
            }
		],
    "presets": [
        {
          "name": "Hero New",
            "category":"section"
        }
      ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

