<style>
  
.grid-box {
  display: flex;
  margin: 0 auto;
  position: relative;
  grid-gap: var(--base-spacing); }

.grid-child {
  background-color: var(--background-main);
  display: flex;
  position: relative;
  overflow: hidden;
  max-width: none;
  margin: 0; }

.grid-wide {
  width: 66.66666%; }

.grid-normal {
  width: 33.33333%; }


.grid-img-box {
  width: 100%;
  height: 100%; }

.grid-img-box img {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
  object-position: 50% 50%; }

.grid-text-box {
  top: 0;
  left: 0;
  width: 100%;
  color: #fff;
  height: 100%;
  display: flex;
  position: absolute;
  flex-direction: column;
  text-decoration: none;
  padding: 80px 36px; }

.grid-heading {
  font-size: 24px;
  font-weight: 700;
  color: #3C3C3B; }

.grid-text {
  color: #3C3C3B;
  font-size: 16px;
  margin: 36px 0; }
  .grid-1-link img, .grid-6-link img {
    transition: transform 1s ease-out;
  }
  
  
  
  .bg-block {
    background-color: var(--background-main);
  }
</style>
<div class="bg-block">
  <div class="container">
    <div class="grid-box marg-bottom">
      <div class="grid-1 grid-child">
        <a class="grid-1-link" href="/products/wasstrips-zeebries">
          <div class="grid-img-box">
            <img class="" src="//cdn.shopify.com/s/files/1/0276/8430/7018/t/13/assets/DoosWasstripsDoorBrievenbus.png?v=15992505110428515438" alt="Doosje wasstrips door de brievenbus" style="transform: scale(1); opacity: 1;">
          </div>
          <div class="grid-text-box">
