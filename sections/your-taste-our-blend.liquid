{{ 'ytob.css' | asset_url | stylesheet_tag }}

<div class="ytob-wrapper">
  <div class="container rel">
    <h2 class="ytob-title text-center heading-2">{{section.settings.ytob-heading}}</h2>
    <div class="prod-collections flex-box">
      {%- for collection in collections limit:3 -%}
      	<div>{{ collection.title }}</div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Your Taste Our Blend",
    "settings": [
		{
        "id": "ytob-heading",
        "type": "text",
        "label": "Section Heading"
        }	
	],
	"presets": [
    {
      "name": "YTOB Section",
		"category":"section"
    }
  ]
  }
{% endschema %}

