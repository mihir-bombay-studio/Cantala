<style>
  
  .default-h2 {
    font-size: 40px;
    font-weight: 700;
    color: #342D25;
    font-family: Athelas,sans-serif;
    text-align: center;
  }

  .default-text {
    text-align: center;
  }
  
  .btn {
    background-color: #342D25;
    color: #F4EDE2;
    display: table;
    margin: 0 auto;
    padding: 14px 44px;
    margin-top: 30px;
  }
  .cookie-popup-block {
    position: fixed;
    z-index: 10;
    bottom: 21px;
    left: 23px;
    background-color: #EBDCC2;
    padding: 26px 50px 40px 39px;
    width: 528px;
  }
  .cookie-popup-block .default-h2 {
    text-align: left;
    display: inline-block;
    width: 64%;
    font-size: 30px;
    margin-left: -20px;
    line-height: 33px;
  }

  .cookie-image {
    display: inline-block;
    margin-top: -90px;
    width: 32%;
  }
  .cookie-image svg {
    position: absolute;
    top: -70px;
    left: -20px;
  }
  .cookie-popup-block .default-text {
    text-align: left;
    max-width: 434px;
  }
  .cookie-popup-block .btn {
    margin-top: 0;
    width: auto;
    padding: 12px 18px;
    font-family: var(--font-body-family);
    font-weight: 400;
    border: 0;
    letter-spacing: .8px;
      font-size: 16px;
      }
  .btn.btn-orange {
    background-color: #E6AF7B;
  }
  .btn-cluster .btn {
    display: inline-block;
    margin-right: 12px;
  }
  @media(max-width: 992px) {
    .cookie-popup-block {
      bottom: 0;
      right: 0;
      padding: 28px 20px;
      width: 100%;
    }
    .cookie-popup-block .default-h2 {
      max-width: 90%;
    }
    .cookie-popup-block .default-text {
      max-width: 90%;
    }
  }
  
</style>
<div class="cookie-popup-block" style="display: none;">    
  <div class="rel">
    <span class="cookie-image">{% include "icon-cookie" %}</span>
    <h2 class="default-h2">{{ section.settings.header_text }}</h2>
    <p class="default-text">{{ section.settings.sub_header_text }}</p>
    
    <div class="nav-colors panel-filter">
      <p class="accordion-filter"><strong>Smaak</strong> <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
        </path></svg>
      </p>
      <div class="panel">
        <a href="#" class="undertones only-border" onclick="return false;" data-value="paketten">Pakete</a>
        <a href="#" class="undertones only-border" onclick="return false;" data-value="navullingen">Refills</a>
      </div>
      <p class="accordion-filter"><strong>Organic</strong> <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
        </path></svg>
      </p>
      <div class="panel">
        <a href="#" class="favourites only-border" onclick="return false;" data-value="reinigers">Putzen</a>
        <a href="#" class="favourites only-border" onclick="return false;" data-value="accessoires">Zubeh√∂r</a>
        <a href="#" class="favourites only-border" onclick="return false;" data-value="wasmiddel">Waschen</a>
      </div>
    </div>
    
    <div class="btn-cluster">
      <button class="btn btn-orange"id="decline">
        Decline
      </button>
      <button class="btn"id="accept">
        Accept all
      </button>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
      $(".cookie-popup-block:not(.active)").fadeIn();
      $(".cookie-popup-block").addClass("active");
  }); 
  
  $(".cookie-popup-block .pop-close").click(function() {
