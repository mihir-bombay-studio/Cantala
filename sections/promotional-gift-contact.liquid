{{ 'promotional-gift-contact.css' | asset_url | stylesheet_tag }}

<div class="promotional-gift-contact-wrapper rel">
  <div class="abs-background"></div>
  <div class="container">
    <div class="promotional-gift-contact-content flex-box justify-between">
      <div class="pgc-left">
        <h2 class="pgc-heading">{{ section.settings.heading }}</h2>
        <div class="pgc-form-wrapper flex-box">
        {% form 'contact' %}
        {%- if form.errors -%}
        {{ form.errors | default_errors  }}
        {%- endif -%}
        {%- if form.posted_successfully? -%}

        {%- endif -%}
        <input class="pgc-form-input half-input" type="text" name="contact[name]" placeholder="Naam*" required>
        <input class="pgc-form-input half-input" type="email" name="contact[email]" placeholder="E-mailadres*" required>
        <input class="pgc-form-input half-input" type="text" name="contact[compnay_name]" placeholder="Jouw bedrijf*" required>
        <textarea name="contact[message]" rows="4" cols="50" placeholder="Jouw boodschap"></textarea>
        <input type="checkbox" class="no-disp" id="tnc" name="tnc" value="Terms">
        <div class="checkbox-wrap flex-box align-center">
          <span class="checkbox rel"><span class="checked"></span></span>
          <span class="checkbox-label">Ik ga akkoord met de <a class="label-link" href="#">voorwaarden</a> en heb de <a class="label-link" href="#">privacy policy</a> gelezen.</span>
        </div>
        <button class="submit-btn btn medium" type="submit" form="contact_form" value="Submit">
          Versturen
          </button>
        
        {% endform %}
    </div>
      </div>
      <div class="pgc-right">
      	<img class="pgc-img" src="{{ section.settings.image | img_url: '500x' }}" alt = "pgc-img">
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Promotional Gift Contact",
    "settings": [
		{
        "id": "heading",
        "type": "text",
        "label": "Section Heading"
        },
		{
        "id": "image",
        "type": "image_picker",
        "label": "Section Image"
        }
	],
	"presets": [
    {
      "name": "Promotional Gift Contact",
		"category":"section"
    }
  ]
  }
{% endschema %}

