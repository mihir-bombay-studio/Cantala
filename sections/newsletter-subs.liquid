{{ 'newsletter-sub.css' | asset_url | stylesheet_tag }}

<div class="newsletter-sub-wrapper">
  <div class="container">
    <h2 class="newsletter-sub-heading text-center heading-2">{{ section.settings.nl_sub_heading }}</h2>
    <div class="ns-form-wrapper flex-box">
      {% form 'customer', class: 'newsletter-form' %}
      {%- if form.errors -%}
      {{ form.errors | default_errors  }}
      {%- endif -%}
      {%- if form.posted_successfully? -%}
		Subscribed to our newsletter!
      {%- endif -%}
		<div class="ns-sub-form-input-wrap flex-box">
      <input class="subscription-form-input" type="email" name="contact[email]" placeholder="{{ section.settings.newsletter_email_placeholder }}" required>
          <div class="submit-btn-wrap wrap-disabled">
            <button class="submit-btn btn medium disabled" type="submit" name="commit" id="Subscribe" value="Submit">
              {{ section.settings.newsletter_btn_text }}
            </button>
          </div>
      </div>
      <input type="checkbox" class="no-disp" id="tnc" name="contact[checkbox]" value="Terms">
      <div class="checkbox-wrap flex-box align-center">
        <span for="tnc" class="checkbox rel"><span class="checked"></span></span>
        <span class="checkbox-label">{{ section.settings.newsletter_checkbox }}</span>
      </div>
        {% endform %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Newsletter Subscription",
    "settings": [
		{
          "id": "nl_sub_heading",
          "type": "text",
          "label": "Section Heading"
        },
		{
          "id": "newsletter_email_placeholder",
          "type": "text",
          "label": "Newsletter Email Placeholder",
		  "default": "Jouw e-mailadres"
        },
		{
          "id": "newsletter_btn_text",
          "type": "text",
          "label": "Newsletter Button Text",
		  "default": "Inschrijven"
        },
		{
          "id": "newsletter_checkbox",
          "type": "html",
          "label": "Newsletter Checkbox"
        }
	],
	"presets": [
    {
      "name": "Newsletter Subscription",
		"category":"section"
    }
  ]
  }
{% endschema %}

