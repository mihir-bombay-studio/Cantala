    z-index: 4;
    position: relative;
    display: inline-block;
    height: auto;
    width: 16px;
    vertical-align: middle;
}
  .search-container .search svg {
    content: "";
    position: absolute;
    top: -9px;
    right: 0;
    bottom: 0;
    left: 8px;
    transition: all .5s;
}

.search-container .search:hover {
  cursor: pointer;
}
.search-container .input-box {
    position: absolute;
    right: -20px;
    left: auto;
    top: -5px;
    background-color: transparent;
}

