{{ 'top-in-gift.css' | asset_url | stylesheet_tag }}

<div class="top-in-gift-wrapper container rel">
    <div class="top-in-gift-background"></div>
  	<h2 class="tig-title heading-2">{{ section.settings.tig_heading }}</h2>
  <div class="tig-desc-button-wrapper">
    <div class="tig-desc">{{ section.settings.tig_desc }}</div>
    {% for block in section.blocks %}
    {% if block.type == "button" %}
    <a href="{{ block.settings.button_link }}" class="btn {% if block.settings.button-color == 'light' %}btn-light{% else %}btn-dark{% endif %}">
      {{ block.settings.button_text | escape }}
    </a>
    {% endif %}
    {% endfor %}
  </div>
    
</div>

{% schema %}
  {
    "name": "Top in Gift",
    "settings": [
		{
        "id": "tig_heading",
        "type": "text",
        "label": "Section Heading"
        },
		{
        "id": "tig_desc",
        "type": "text",
        "label": "Section Description"
        },
		{
        "id": "tig_big_img",
        "type": "image_picker",
        "label": "Big Image"
        },
		{
        "id": "tig_small_img",
        "type": "image_picker",
        "label": "Small Image"
        }
	],
	"blocks": [
			{
                "type": "button",
                "name": "Button",
				"limit": 1,
                "settings": [

                {
                "id": "button_text",
                "type": "text",
                "label": "Button Text"

                },
                {
                "id": "button_link",
                "type": "url",
                "label": "Button Link"
                },
				{
                  "type": "select",
                  "id": "button-color",
                  "options": [
                    {
                      "value": "light",
                      "label": "Light"
                    },
                    {
                      "value": "dark",
                      "label": "Dark"
                    }
                  ],
                  "default": "dark",
                  "label": "Dark"
                }
              ]
            }
		],
	"presets": [
    {
      "name": "Top in Gift",
		"category":"section"
    }
  ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

