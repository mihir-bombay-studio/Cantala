{{ 'promotional-gifts.css' | asset_url | stylesheet_tag }}

<style>
  a.btn.medium.btn-dark.module {
    padding-left: 24px;
    padding-right: 24px;
    margin-top: 24px;
}
</style>
<div class="promotional-gifts-wrapper rel module">
  <div class="container">
    <div class="promotional-gifts-content flex-box justify-between align-center">
      <div class="promotional-gifts-left">
        <h2 class="promotional-gifts-heading heading-2">{{ section.settings.heading }}</h2>
        <div class="promotional-gifts-desc">{{ section.settings.desc }}</div>
        {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="btn medium btn-dark module">
        	{{ section.settings.button_text | escape }}
        </a>
        {% endif %}
      </div>
      <div class="promotional-gifts-right">
        <div class="img-background"></div>
        <div class="promotional-gifts-img">
        	<img class="pg-img" src="{{ section.settings.image | img_url: '1280x' }}" alt = "pg-img">
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Promotional Gifts",
    "settings": [
		{
        "id": "heading",
        "type": "text",
        "label": "Section Heading"
        },
		{
        "id": "desc",
        "type": "text",
        "label": "Section Description"
        },
		{
        "id": "image",
        "type": "image_picker",
        "label": "Section Image"
        },
		{
			"id": "button_text",
        	"type": "text",
        	"label": "CTA text"
		},
		{
			"id": "button_link",
        	"type": "url",
        	"label": "CTA link"
		}
	],
	"presets": [
    {
      "name": "Promotional Gifts",
		"category":"section"
    }
  ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

