{{ 'stores.css' | asset_url | stylesheet_tag }}

<div class="stores-wrapper">
  <div class="container">
    <div class="stores-content flex-box">
    	{% for block in section.blocks %}
        {% if block.type == "address" %}
      		<div class="store-address">
              <div class="store-name medium">{{ block.settings.store_name }}</div>
      		</div>
        {% endif %}
        {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Stores Addresses",
    "settings": [],
	"blocks": [
		{
                "type": "address",
                "name": "Store Address",
				"limit": 2,
                "settings": [

                {
                "id": "store_name",
                "type": "text",
                "label": "Store Name"
                },
                {
                "id": "add_ln_1",
                "type": "text",
                "label": "Address Line One"
                },
				{
                "id": "add_ln_2",
                "type": "text",
                "label": "Address Line Two"
                },
				{
                "id": "add_ln_3",
                "type": "text",
                "label": "Address Line Three"
                },
				{
                "id": "website",
                "type": "text",
                "label": "Website"
                },
				{
                "id": "email",
                "type": "text",
                "label": "Email"
                },
				{
                "id": "phone",
                "type": "text",
                "label": "Phone Number"
                }
              ]
            }
	],
	"presets": [
    {
      "name": "Stores Addresses",
		"category":"section"
    }
  ]
  }
{% endschema %}

