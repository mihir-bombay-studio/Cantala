<style>
  .breadcrums {
  	margin-bottom: 66px;
  }
  .breadcrum {
    font-size: 13px;
    margin-right: 18px;
    position: relative;
    opacity: .5;
  }  
  .breadcrum:last-child {  	
    margin-right: 0;    
    opacity: 1;
  }
  
  .breadcrum::after {
  	content: "/";
    position: absolute;
    right: -12px;
  }
  
  .breadcrum:last-child::after { 
  	content: "";
  }
</style>
<style>

  .breadcrums {
    margin-bottom: 36px;
  }
  h1.main-page-title.page-title.h0 {
    font-size: 30px;
    font-family: Athelas,sans-serif;
    color: #342D25;
    position: relative;
  }
  .mobile-filter {
    display: none;
  }
  @media(max-width: 992px) {
    .mobile-filter {
      position: absolute;
      top: 0;
      right: 0;
      display: inline;
      cursor: pointer;
    }    
    h1.main-page-title.page-title.h0 {
      padding-right: 30px;
    }
  }
</style>

<div class="container">
  <div class="breadcrums">
    <a href="/" class="breadcrum">Home</a>
    <a class="breadcrum active">Relatiegeschenken</a>
  </div>
</div>

