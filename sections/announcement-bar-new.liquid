{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="announcement-bar flex-box rel">
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="flex-box">
          {%- endif -%}
              <div class="announcement-text">
                {{ block.settings.text | escape }}
              </div>
              <div id="announcement-close" class="announcement-close">
              	{% include 'icon-close-white' %}
              </div>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "Announcement Bar New",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Announcement Bar Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Announcement Bar Link"
        }
      ]
    }
  ]
}
{% endschema %}
