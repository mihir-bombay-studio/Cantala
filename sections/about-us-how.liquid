{{ 'about-us-how.css' | asset_url | stylesheet_tag }}

<style>
  a.btn.medium.btn-dark.module {
    padding-left: 24px;
    padding-right: 24px;
    margin-top: 24px;
}
</style>
<div class="about-us-how-wrapper">
  <div class="container">
    <div class="auh-wrapper flex-box justify-between align-center">
      <div class="auh-left module">
        <h1 class="auh-title heading-2">{{ section.settings.heading }}</h1>
        <div class="main-para">{{ section.settings.para_one }}</div>
        
        {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="btn medium btn-dark module">
        	{{ section.settings.button_text | escape }}
        </a>
        {% endif %}
      </div>
      <div class="auh-right module">
      	<div class="auh-main-img">
        	<img class="main-img" src="{{ section.settings.main_img | img_url: '700x' }}" alt = "sub-img">
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "About Us How",
    "settings": [
		{
			"id": "heading",
        	"type": "text",
        	"label": "Section Heading"
		},
		{
			"id": "para_one",
        	"type": "html",
        	"label": "Main Paragraph"
		},
		{
			"id": "main_img",
			"type": "image_picker",
			"label": "Main Image"
		},
		{
			"id": "button_text",
        	"type": "text",
        	"label": "CTA text"
		},
		{
			"id": "button_link",
        	"type": "url",
        	"label": "CTA link"
		}
	],
	"presets": [
    {
      "name": "About Us How",
		"category":"section"
    }
  ]
  }
{% endschema %}

