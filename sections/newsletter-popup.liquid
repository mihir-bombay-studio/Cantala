<style>
  
  .default-h2 {
    font-size: 40px;
    font-weight: 700;
    color: #342D25;
    font-family: Athelas,sans-serif;
    text-align: center;
  }

  .default-text {
    text-align: center;
  }
  
  .btn {
    background-color: #342D25;
    color: #F4EDE2;
    display: table;
    margin: 0 auto;
    padding: 14px 44px;
    margin-top: 30px;
  }
  .popup-block {
    position: fixed;
    z-index: 10;
    bottom: 21px;
    right: 23px;
    background-color: #EBDCC2;
    padding: 37px 39px;
    width: 528px;
  }
  .popup-block .default-h2 {
    text-align: left;
    max-width: 345px;
  }
  .popup-block .default-text {
    text-align: left;
    max-width: 345px;
  }
  
  
</style>
<div class="popup-block">    
  <div class="">
    <h2 class="default-h2">{{ section.settings.header_text }}</h2><span class="pop-close">{% include "icon-x" %}</span>
    <p class="default-text">{{ section.settings.sub_header_text }}</p>
    {% form 'customer', class: 'newsletter-form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form__field-wrapper">
                <div class="field">
                  <input
                    id="NewsletterForm--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="field__input"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      autofocus
                      aria-invalid="true"
                      aria-describedby="Newsletter-error--{{ section.id }}"
                    {% elsif form.posted_successfully? %}
                      aria-describedby="Newsletter-success--{{ section.id }}"
                    {% endif %}
                    placeholder="Jouw e-mailadres"
                    required
                  >
                  <button type="submit" class="btn" name="commit" id="Subscribe" aria-label="Inschrijven">
                    Inschrijven
                  </button>
                </div>
                {%- if form.errors -%}
                  <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
                {%- endif -%}
              </div>
              {%- if form.posted_successfully? -%}
                <h3 class="newsletter-form__message newsletter-form__message--success form__message" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{{ 'newsletter.success' | t }}</h3>
              {%- endif -%}
            {% endform %}
  </div>
</div>


{% schema %}
  {
    "name": "Newsletter popup",
    "settings": [
		{
          "id": "header_text",
          "type": "text",
          "label": "Header text"

        },
        {
        "id": "sub_header_text",
        "type": "html",
        "label": "Sub header text"

        }
	],
"presets": [
    {
      "name": "Newsletter popup",
		"category":"section"
    }
  ]
  }
{% endschema %}

